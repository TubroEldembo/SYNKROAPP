<Window x:Class="SYNKROAPP.Vistes.Vista_Movimientos.PantallaMoverProductosWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Movimientos"
        mc:Ignorable="d"
        Title="PantallaMoverProductosWPF" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Mover Producto Internamente" FontSize="24" FontWeight="Bold" Foreground="White" />

        <!-- Formulario -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="0,20,0,20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Producto: " FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding NombreProducto}" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Almacén Origen:" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding AlmacenOrigen}" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Zona Origen:" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding ZonaOrigen}" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Seleccionar Almacen Destino:" FontWeight="Bold" FontSize="16"/>
                    <ComboBox ItemsSource="{Binding AlmacenesDisponibles}" SelectedItem="{Binding AlmacenSeleccionado}" 
                              DisplayMemberPath="NomMagatzem" Width="300" Margin="0,0,0,10"/>

                    <TextBlock Text="Seleccionar Zona Destino:" FontWeight="Bold" FontSize="16"/>
                    <ComboBox ItemsSource="{Binding ZonasDestino}" SelectedItem="{Binding ZonaDestinoSeleccionada}" 
                             DisplayMemberPath="Nom" Width="300" Margin="0,0,0,10"/>

                    <TextBlock Text="Cantidad a mover:" FontWeight="Bold" FontSize="16"/>
                    <TextBox Text="{Binding CantidadAMover}" Width="100" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="120" Height="40"
                   Background="#CCC" Margin="0,0,10,0" Click="btnCancelar_Click"/>
            <Button Content="Confirmar Movimiento" Width="180" Height="40"
                   Background="#28A745" Foreground="White" Click="btnConfirmar_Click"/>
        </StackPanel>
    </Grid>
</Window>
