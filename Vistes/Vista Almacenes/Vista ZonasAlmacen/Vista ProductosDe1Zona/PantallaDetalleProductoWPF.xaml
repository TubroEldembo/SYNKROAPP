<Window x:Class="SYNKROAPP.Vistes.Vista_Almacenes.Vista_ZonasAlmacen.Vista_ProductosDe1Zona.PantallaDetalleProductoWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:SYNKROAPP.CONVERTERS"
        mc:Ignorable="d"
        Title="Detalle Producto"
        Height="832" Width="1280"
        Background="#6F7ABC"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Definición de las filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <!-- Fila para la navegación superior -->
            <RowDefinition Height="*" />
            <!-- Fila para el contenido principal -->
            <RowDefinition Height="Auto" />
            <!-- Fila para los botones inferiores -->
        </Grid.RowDefinitions>

        <!-- Barra superior con el botón de regresar y título -->
        <Grid Grid.Row="0" Background="#5965AA">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Button x:Name="btnRegresar" Width="40" Height="40" Background="Transparent" BorderThickness="0" Click="btnRegresar_Click">
                    <TextBlock Text="←" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <TextBlock Text="DETALLE DEL PRODUCTO" FontSize="20" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Contenido principal -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título con nombre del producto -->
                    <RowDefinition Height="*"/>
                    <!-- Contenido principal -->
                </Grid.RowDefinitions>

                <!-- Título del producto -->
                <TextBlock Grid.Row="0" Text="{Binding NombreProducto}" FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20"/>

                <!-- Contenido principal (imagen a la izquierda y detalles a la derecha) -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <!-- Columna para información básica y imagen -->
                        <ColumnDefinition Width="1.5*" />
                        <!-- Columna para detalles y ubicaciones -->
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda: Imagen y datos básicos -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <!-- Imagen del producto con mejoras visuales -->
                        <Border Background="#FFFFFF" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" 
                                Height="300" Width="320" HorizontalAlignment="Left">
                            <Grid>
                                <!-- Imagen con efecto de sombra -->
                                <Border Margin="10">
                                    <Image x:Name="imgProducto" Source="{Binding ImagenProducto}" Stretch="Uniform"/>
                                </Border>

                                <!-- Mensaje cuando no hay imagen -->
                                <TextBlock Text="Sin imagen disponible" FontSize="16" Foreground="#AAAAAA" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           />
                            </Grid>
                        </Border>

                        <TextBlock Text="Información básica" Style="{StaticResource TituloSeccion}" Margin="0,25,0,15"/>

                        <!-- SKU con estilo badge -->
                        <TextBlock Text="SKU" Style="{StaticResource EtiquetaCampo}"/>
                        <Border Background="#F0F4F8" BorderBrush="#D0DCE8" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" HorizontalAlignment="Left">
                            <TextBlock Text="{Binding SKU}" Padding="10,5" FontFamily="Consolas" FontSize="14" Foreground="#0066CC"/>
                        </Border>

                        <!-- Estado del producto como badge de color -->
                        <TextBlock Text="Estado" Style="{StaticResource EtiquetaCampo}"/>
                        <!--<Border Style="{StaticResource BadgeEstado}" 
                                Background="{Binding EstadoProducto, Converter={StaticResource EstadoColorConverter}}">
                            <TextBlock Text="{Binding EstadoProducto}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                        </Border>-->

                        <!-- Información adicional básica del producto -->
                        <TextBlock Text="Categoría" Style="{StaticResource EtiquetaCampo}"/>
                        <TextBlock Text="{Binding Categoria}" Style="{StaticResource DatoValor}"/>

                        <TextBlock Text="Precio" Style="{StaticResource EtiquetaCampo}" 
                                   Visibility="{Binding EstaEnVenta, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding EstaEnVenta, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border Background="#EEFAEF" BorderBrush="#CCEBD0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
                                <TextBlock Text="{Binding PrecioFormateado}" Padding="10,5" FontWeight="SemiBold" FontSize="14" Foreground="#28A745"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Columna derecha: Detalles del producto y ubicaciones -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Descripción del producto -->
                            <RowDefinition Height="*"/>
                            <!-- Ubicaciones del producto -->
                        </Grid.RowDefinitions>

                        <!-- Descripción y detalles -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Descripción" Style="{StaticResource TituloSeccion}"/>
                            <Border Background="#F8F8F8" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                                <TextBlock Text="{Binding Descripcion}" TextWrapping="Wrap" Padding="10" 
                                           FontSize="14" Height="Auto" MinHeight="80"/>
                            </Border>
                        </StackPanel>

                        <!-- Zonas donde se encuentra el producto con diseño mejorado -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Ubicaciones del producto" Style="{StaticResource TituloSeccion}"/>

                            <!-- Indicador de cantidad total -->
                            <Border Background="#F0F4F8" BorderBrush="#D0DCE8" BorderThickness="1" CornerRadius="4" 
                                    Margin="0,0,0,15" Padding="10" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Cantidad total disponible: " FontSize="14"/>
                                    <TextBlock Text="{Binding CantidadTotalDisponible}" FontWeight="Bold" FontSize="14" Foreground="#0066CC"/>
                                </StackPanel>
                            </Border>

                            <!-- DataGrid con estilos mejorados -->
                            <DataGrid x:Name="dgZonasProducto" AutoGenerateColumns="False"
                                      ItemsSource="{Binding ZonasProducto}"
                                      Style="{StaticResource DataGridEstilo}"
                                      MaxHeight="300">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F0F4F8"/>
                                        <Setter Property="Foreground" Value="#333333"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Almacén" Binding="{Binding Almacen}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="10,0"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Zona" Binding="{Binding Zona}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="10,0"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Cantidad Disponible" Binding="{Binding QuantitatDisponible}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="10,0"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- Botones inferiores -->
        <Border Grid.Row="2" Background="#F0F2F5" Padding="20" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="btnRegresar2" Content="Volver" Width="120" Height="40" 
                            Background="White" Foreground="#555555" BorderBrush="#CCCCCC" BorderThickness="1"
                            Click="btnRegresar_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnEditar" Content="Editar" Width="120" Height="40" 
                            Background="#6F7ABC" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                            Click="btnEditar_Click"/>


                    <Button x:Name="btnMoverProducto" Content="Mover" Width="120" Height="40" 
                            Background="#17A2B8" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                            Click="btnMoverProducto_Click"/>
                    
                    <Button x:Name="btnEliminar" Content="Eliminar" Width="120" Height="40" 
                            Background="#DC3545" Foreground="White" BorderThickness="0"
                            Click="btnEliminar_Click" RenderTransformOrigin="0.5,0.5"/>


                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>