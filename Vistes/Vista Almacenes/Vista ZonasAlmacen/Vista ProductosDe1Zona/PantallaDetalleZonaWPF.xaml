<Window x:Class="SYNKROAPP.Vistes.Vista_Almacenes.Vista_ZonasAlmacen.Vista_ProductosDe1Zona.PantallaDetalleZonaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Almacenes.Vista_ZonasAlmacen.Vista_ProductosDe1Zona"
        mc:Ignorable="d"
        Title="PantallaDetalleZonaWPF"  Height="832" Width="1280" 
        Background="#6F7ABC" 
        WindowStyle="SingleBorderWindow" 
        WindowStartupLocation="CenterScreen"  WindowState="Maximized" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="40,30,40,20">
            <TextBlock FontSize="28" FontWeight="Bold" Foreground="White">
                <Run Text="DETALLES DE LA ZONA - " />
                <Run Text="{Binding NomZona}" />
            </TextBlock>

            <TextBlock x:Name="txtSubtitulo" Text="Vista detallada de los productos que hay en esta zona" 
                 FontSize="18" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="40,0,40,20">
            <Border Background="#F2F2F2" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                </Border.Effect>

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detalles de la zona -->
                    <Border Grid.Row="0" Background="#D7D6D6" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="DETALLES DE LA ZONA" FontWeight="SemiBold" FontSize="20" Margin="0,0,0,10"/>
                            <WrapPanel ItemHeight="Auto" ItemWidth="Auto">
                                <StackPanel Width="300" Margin="0,0,20,10">
                                    <TextBlock Text="Nombre de la zona:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                                        <Run Text="{Binding NomZona}" />
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Width="300" Margin="0,0,20,10">
                                    <TextBlock Text="Capacidad:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                                        <Run Text="{Binding Capacitat}" />
                                        <Run Text="productos" />
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Width="300" Margin="0,0,20,10">
                                    <TextBlock Text="Nº Productos almacenados:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                                        <Run Text="{Binding NProductos}" />
                                    </TextBlock>
                                </StackPanel>


                                <StackPanel Width="150">
                                    <TextBlock Text="Zona ID:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                                        <Run Text="{Binding ZonaID}" />
                                    </TextBlock>
                                </StackPanel>

                                

                                <StackPanel Width="300" Margin="0,0,20,10">
                                    <TextBlock Text="ID Almacén:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                    <Run Text="{Binding AlmacenID}" />
                                    </TextBlock>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Productos de la Zona -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                          
                            <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="Black">
                                <Run Text="LISTA DE PRODUCTOS EN LA ZONA - " />
                                <Run Text="{Binding NomZona}" />
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                                <StackPanel>
                                    <TextBlock Text="Categoría" FontWeight="Bold"/>
                                    <ComboBox Width="150" ItemsSource="{Binding Categories}" SelectedItem="{Binding CategoriaSeleccionada}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Subcategoría" FontWeight="Bold"/>
                                    <ComboBox Width="136" ItemsSource="{Binding Subcategories}" SelectedItem="{Binding SubCategoriaSeleccionada}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Estado" FontWeight="Bold"/>
                                    <ComboBox Width="136" ItemsSource="{Binding Estats}" SelectedItem="{Binding EstatSeleccionat}"/>
                                </StackPanel>


                            </StackPanel>

                        </StackPanel>
                       
                        <DataGrid Grid.Row="1" x:Name="dgProductosDeLaZona" AutoGenerateColumns="False" Margin="0,0,0,20"
                                  Background="White" BorderBrush="#CCC" BorderThickness="1" ItemsSource="{Binding Productes}" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="dgProductosDeLaZona_SelectionChanged">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Producto ID" Binding="{Binding ProducteID}" Width="*"/>
                                <DataGridTextColumn Header="Nombre Producto" Binding="{Binding Nom}" Width="*"/>
                                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*"/>
                                <DataGridTextColumn Header="Subcategoría" Binding="{Binding SubCategoria}" Width="*"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantitat}" Width="*"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding Estat}" Width="*"/>
                                <DataGridTemplateColumn Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Editar" Margin="0,0,5,0" Name="btnEditar" Click="btnEditar_Click"/>
                                                <Button Content="Eliminar" Name="btnEliminar" Click="btnEliminar_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1" Content="Agregar nuevo producto" Width="194"
                          HorizontalAlignment="Left" Background="Black" Foreground="White" Name="btnAgregarProducto"
                          FontWeight="SemiBold" Click="btnAgregarZona_Click" Margin="966,188,0,0" Height="40" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Botones inferiores -->
        <Border Grid.Row="2" Background="#D9D9D9" Padding="20" Margin="0,40,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Volver" Width="120" Height="40"
                  Margin="0,0,10,0" Background="#CCC" Name="btnVolver" Click="btnVolver_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
