<Window x:Class="SYNKROAPP.Vistes.Vista_Almacenes.PantallaZonasAlmacenWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Almacenes"
        mc:Ignorable="d"
        Background="#6F7ABC"
        Title="PantallaZonasAlmacenWPF" WindowStartupLocation="CenterScreen"
        Height="832" Width="1280" WindowState="Maximized" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="40,30,40,20">
            <TextBlock FontSize="28" FontWeight="Bold" Foreground="White">
                <Run Text="GESTIONAR ZONAS - " />
                <Run Text="{Binding DetalleAlmacen}" />
            </TextBlock>

            <TextBlock x:Name="txtSubtitulo" Text="Configure las zonas para organizar su almacén" 
                     FontSize="18" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="40,0,40,20">
            <Border Background="#F2F2F2" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                </Border.Effect>
                
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detalles del almacén -->
                    <Border Grid.Row="0" Background="#D7D6D6" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="DETALLES DEL ALMACÉN" FontWeight="SemiBold" FontSize="20" Margin="0,0,0,10"/>
                            <WrapPanel>
                                <StackPanel Width="300" Margin="0,0,20,0">
                                    <TextBlock Text="Nombre:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                                        <Run Text="{Binding DetalleAlmacen}" />
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Width="300" Margin="0,0,20,0">
                                    <TextBlock Text="Capacidad:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                    <Run Text="{Binding Capacitat}" />
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Width="300">
                                    <TextBlock Text="ID:" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock FontSize="16">
                    <Run Text="{Binding MagatzemID}" />
                                    </TextBlock>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>


                    <!-- Zonas del almacén -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ZONAS DEL ALMACÉN" FontWeight="SemiBold" FontSize="20" Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1" x:Name="dgZonasAlmacen" AutoGenerateColumns="False" Margin="0,0,0,20"
                                  Background="White" BorderBrush="#CCC" BorderThickness="1" ItemsSource="{Binding Zonas}" 
                                  ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="dgZonasAlmacen_SelectionChanged">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Zona ID" Binding="{Binding ZonaEmmagatzematgeID}" Width="*"/>
                                <DataGridTextColumn Header="Nombre Zona" Binding="{Binding Nom}" Width="*"/>
                                <DataGridTextColumn Header="Capacidad" Binding="{Binding Capacitat}" Width="*"/>
                                <DataGridTextColumn Header="Nº Productos" Binding="{Binding NProductos}" Width="*"/>
                                <DataGridTemplateColumn Header="Acciones" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Editar" Margin="0,0,5,0" Name="btnEditar" Click="btnEditar_Click"/>
                                                <Button Content="Eliminar" Name="btnEliminar" Click="btnEliminar_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="2" Content="Agregar nueva zona" Width="194" Height="40"
                              HorizontalAlignment="Left" Background="Black" Foreground="White"
                              FontWeight="SemiBold" Click="btnAgregarZona_Click" Margin="966,0,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Botones inferiores -->
        <Border Grid.Row="2" Background="#D9D9D9" Padding="20" Margin="0,40,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Volver" Width="120" Height="40"
                      Margin="0,0,10,0" Background="#CCC" Name="btnVolver" Click="btnVolver_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
