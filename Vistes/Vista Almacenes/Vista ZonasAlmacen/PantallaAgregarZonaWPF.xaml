<Window x:Class="SYNKROAPP.Vistes.Vista_Almacenes.Vista_ZonasAlmacen.PantallaAgregarZonaWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PantallaAgregarZonaWPF" Height="832" Width="1280"
        WindowState="Maximized" ResizeMode="NoResize"
        Background="#6F7ABC">

    <Grid Margin="27,49,27,49">

        <!-- Título principal (fuera del border blanco) -->
        <TextBlock Text="AGREGAR NUEVA ZONA DE ALMACENAMIENTO"
                   FontSize="30" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

        <!-- Panel principal blanco -->
        <Border Background="White" CornerRadius="10" BorderBrush="#CCCCCC"
                BorderThickness="1" Padding="40" Margin="0,60,0,0">
            <StackPanel Margin="0,0,0,-38">
                <TextBlock Text="DETALLES DE LA NUEVA ZONA"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,30" Height="34"/>
                <!-- Panel: Nombre de la zona -->
                <Border Background="#D7D6D6" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Nombre de la zona de almacén *" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>
                        <TextBox Height="40" Width="500" Text="{Binding Nom}"/>
                    </StackPanel>
                </Border>

                <!-- Panel: Detalles + Almacén + Capacidad -->
                <Border Background="#D7D6D6" CornerRadius="10" Padding="20" Margin="0,0,0,20" Height="279">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Detalles -->
                        <StackPanel>
                            <TextBlock Text="Detalles de la zona de almacén" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Almacén perteneciente -->
                        <StackPanel>
                            <TextBlock Text="Almacén perteneciente" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
                            <TextBox  Text ="{Binding AlmacenPerteneciente}" Width="500" Height="40" IsReadOnly="True" Background="#E0E0E0"/>
                        </StackPanel>

                        <!-- Capacidad máxima -->
                        <StackPanel>
                            <TextBlock Text="Capacidad Máxima" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
                            <TextBox Width="240" Height="40" Text="{Binding Capacitat}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- Panel: Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                    <Button Content="Cancelar" Width="150" Height="45"
                            
                            Background="#D9534F" Foreground="White" FontWeight="SemiBold"/>
                                <Button Content="Guardar Zona Almacén" Width="200" Height="45"
                            Background="#5CB85C" Foreground="White" FontWeight="SemiBold" Click="Button_Click"/>    
                </StackPanel>
            </StackPanel>
            
        </Border>
    </Grid>
</Window>
