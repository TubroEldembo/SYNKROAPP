<UserControl x:Class="SYNKROAPP.Vistes.Vista_Almacenes.VistaAlmacenes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Almacenes"
             mc:Ignorable="d" 
             d:DesignHeight="832" d:DesignWidth="1280"
             Background="#6F7ABC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="GESTIÓN DE ALMACENES" 
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10" >
            <TextBox Width="250" Height="35"  Margin="10,0"/>
            <Button Content="CREAR ALMACÉN" Width="150" Height="35" Margin="10,0" Name="btnCrearAlmacen" Click="btnCrearAlmacen_Click"/>
        </StackPanel>

        <!-- Información de Estadísticas Generales -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="2" Margin="10">
            <TextBlock Text="ESTADÍSTICAS GENERALES" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="TOTAL ALMACENES: {Binding TotalAlmacenes}" />
            <TextBlock Text="MOVIMIENTOS RECIENTES: {Binding MovimientosRecientes}" />
            <TextBlock Text="PRODUCTOS EN ALMACENES: {Binding ProductosEnAlmacenes}"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="10">
            <TextBlock Text="LISTA DE ALMACENES" FontSize="18" FontWeight="Bold"/>
            <ListBox Height="150" Margin="0,10" HorizontalAlignment="Stretch">
                <!-- Actualmente vacío, se llenará dinámicamente -->
            </ListBox>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="4" Margin="10">
            <TextBlock Text="MOVIMIENTOS RECIBIDOS" FontSize="18" FontWeight="Bold"/>
            <ListBox Height="150" Margin="0,10" HorizontalAlignment="Stretch">
                <!-- Actualmente vacío, se llenará dinámicamente -->
            </ListBox>
        </StackPanel>


    </Grid>
    

</UserControl>
