<UserControl x:Class="SYNKROAPP.Vistes.Vista_Importar.VistaImportarProductos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Importar"
             mc:Ignorable="d"
             d:DesignHeight="832" d:DesignWidth="1280">

    <!-- Fondo con gradiente para un aspecto más moderno -->
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A5793" Offset="0"/>
            <GradientStop Color="#6F7ABC" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <Grid Margin="40,30,40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado de Importación -->
        <Border Grid.Row="0" Background="#FFFFFF" CornerRadius="15" Margin="0,0,0,20" Padding="20,15">
            <Border.Effect>
                <DropShadowEffect Color="#202040" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="IMPORTAR PRODUCTOS" 
                           FontSize="32" 
                           Foreground="#4A5793"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#DDDDDD" BlurRadius="2" ShadowDepth="1" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Área principal de importación -->
        <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="15" Margin="0,0,0,20" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#202040" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selector de archivo y configuraciones -->
                <Border Grid.Row="0" Background="#F8F9FE" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ruta del archivo -->
                        <Border Grid.Column="0" Background="White" BorderBrush="#D0DCE8" BorderThickness="1" CornerRadius="8" Margin="0,0,15,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📁" FontSize="16" Margin="15,0,0,0" 
                                           Foreground="#757575" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Name="txtRutaArchivo" BorderThickness="0" 
                                         Background="Transparent" Padding="10,8" IsReadOnly="True"
                                         Text="Selecciona un archivo JSON"/>
                            </Grid>
                        </Border>

                        <!-- Botón de selección de archivo -->
                        <Button Grid.Column="1" Name="btnSeleccionarArchivo" Content="Seleccionar Archivo" Width="200" Height="40"
                                Background="#4A5793" Foreground="White" BorderThickness="0"
                                Click="btnSeleccionarArchivo_Click">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                            <Button.Effect>
                                <DropShadowEffect Color="#202040" BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </Grid>
                </Border>

                <!-- Vista previa de productos -->
                <Border Grid.Row="1" Background="#F8F9FE" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="15" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título de vista previa -->
                        <TextBlock Grid.Row="0" Text="VISTA PREVIA DE PRODUCTOS" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#4A5793"
                                   Margin="0,0,0,15"/>

                        <!-- DataGrid de vista previa -->
                        <DataGrid Grid.Row="1" Name="dgVistaPrevia" 
                                  AutoGenerateColumns="False" 
                                  HeadersVisibility="Column"
                                  IsReadOnly="True" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="#FFFFFF"
                                  AlternatingRowBackground="#F8F9FE"
                                  GridLinesVisibility="None"
                                  VerticalGridLinesBrush="#EEEEEE"
                                  HorizontalGridLinesBrush="#EEEEEE"
                                  RowHeight="40">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#F0F2FF"/>
                                    <Setter Property="Foreground" Value="#4A5793"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="CÓDIGO" Width="100"/>
                                <DataGridTextColumn Header="NOMBRE" Width="200"/>
                                <DataGridTextColumn Header="CATEGORÍA" Width="150"/>
                                <DataGridTextColumn Header="PRECIO" Width="100"/>
                                <DataGridTextColumn Header="DESCRIPCIÓN" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Área de botones de acción -->
        <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="15" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#202040" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnCancelar" Content="CANCELAR" Width="120" Height="40" Margin="0,0,10,0"
                        Background="#F0F2FF" Foreground="#4A5793" BorderThickness="0"
                        Click="btnCancelar_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="#DDDDDD" BlurRadius="5" ShadowDepth="1" Opacity="0.5"/>
                    </Button.Effect>
                </Button>
                <Button Name="btnImportar" Content="IMPORTAR" Width="120" Height="40" 
                        Background="#4A5793" Foreground="White" BorderThickness="0"
                        Click="btnImportar_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="#202040" BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>