<Window x:Class="SYNKROAPP.Vistes.Vista_Home.PantallaHomeWPF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Home"
      mc:Ignorable="d" 
      d:DesignHeight="832" d:DesignWidth="1280"
      Title="PantallaHomeWPF"
      Background="#6F7ABC"
      WindowState="Maximized" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Name="btnToggleSlider"
            Content="☰"
            Width="30"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            Click="btnToggleSlider_Click"
            Background="Transparent"
            BorderThickness="0"
            FontSize="20"
            Grid.Column="0"/>

        <!-- Menu lateral -->
        <Border
            x:Name="sliderBar"
            Width="150"
            Background="#002C5F"
            CornerRadius="6"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Column="0"
            Margin="0"
            Visibility="Collapsed">

            <DockPanel LastChildFill="True" Margin="12">

                <StackPanel DockPanel.Dock="Top" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <!-- Aquí puedes poner el logo en imagen más adelante -->
                    <!--<Image Source="ruta/a/tu/logo.png" Width="80" Height="80" />-->
                </StackPanel>


                <StackPanel VerticalAlignment="Center" Margin="10,20,10,10" HorizontalAlignment="Left" Orientation="Vertical">
                    <Button Tag="🏠" Content="Inicio" Style="{StaticResource MenuButtonStyle}" Click="btnInicio_Click"/>
                    <Button Tag="📦" Content="Registrar Artículos" Style="{StaticResource MenuButtonStyle}" Click="btnRegistrarArticulos_Click"/>
                    <Button Tag="📦" Content="Importar Productos" Style="{StaticResource MenuButtonStyle}" Click="btnImportar_Click"/>
                    <Button Tag="📄" Content="Almacenes" Style="{StaticResource MenuButtonStyle}" Click="btnAlmacenes_Click"/>
                    <Button Tag="📄" Content="Movimientos" Style="{StaticResource MenuButtonStyle}" Click="btnMovimientos_Click"/>
                    <Button Tag="🛒" Content="Mercado" Style="{StaticResource MenuButtonStyle}" Click="btnMercado_Click"/>
                    <Button Tag="🧾" Content="Comandas" Style="{StaticResource MenuButtonStyle}" Click="btnComandas_Click"/>
                    <Button Tag="⚙️" Content="Configuración" Style="{StaticResource MenuButtonStyle}" Click="btnConfiguracion_Click"/>

                </StackPanel>

            </DockPanel>

        </Border>

        <Grid Grid.Column="1" Margin="10">
            <Rectangle x:Name="overlay"
                       Fill="Transparent"
                       Visibility="Collapsed"
                       MouseDown="overlay_MouseDown"
                       Panel.ZIndex="1"/>
            <ContentControl x:Name="contentArea" Panel.ZIndex="0"/>
        </Grid>
    </Grid>
</Window>
