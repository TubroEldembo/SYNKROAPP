<Window x:Class="SYNKROAPP.Vistes.Vista_Mercado.VistaEmpresas.Vista_Catalogo.PantallaCatalogoProductos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SYNKROAPP.Vistes.Vista_Mercado.VistaEmpresas.Vista_Catalogo"
        mc:Ignorable="d"
        Title="CATÁLOGO DE PRODUCTOS" Height="800" Width="1200" WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" Background="#f9fafb" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Botón Volver --><!--
        <Button Content="Volver" Width="56" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" 
                Margin="16,10,0,0" Command="{Binding VolverCommand}" Background="#2563eb" Foreground="White"
                BorderBrush="#3b82f6" BorderThickness="1" />-->

        <!-- ENCABEZADO -->
        <Border Grid.Row="0" Padding="40,30,40,30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2563eb" Offset="0"/>
                    <GradientStop Color="#3b82f6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock FontSize="32" FontWeight="Bold" Foreground="White" 
                           Text="CATÁLOGO DE PRODUCTOS"/>
                <TextBlock Text="{Binding NomEmpresa}" 
                           FontSize="18" Foreground="#e0f2fe" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- FILTROS Y BÚSQUEDA -->
        <Grid Grid.Row="1" Margin="40,25,40,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
                <!-- TextBox de búsqueda -->
                <StackPanel Orientation="Vertical" Margin="0,10,20,0">
                    <TextBlock Text="Buscar Producto"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#4b5563" Margin="0,0,0,5"/>
                    <TextBox Width="200" Height="32"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- ComboBox Estado -->
                <StackPanel Orientation="Vertical" Margin="0,10,20,0">
                    <TextBlock Text="Estado"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#4b5563" Margin="0,0,0,5"/>
                    <ComboBox Width="140" ItemsSource="{Binding EstadosDisponibles}" 
                              SelectedItem="{Binding EstadoSeleccionado}" />
                </StackPanel>

                <!-- ComboBox Categoría -->
                <StackPanel Orientation="Vertical" Margin="0,10,20,0">
                    <TextBlock Text="Categoría"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#4b5563" Margin="0,0,0,5"/>
                    <ComboBox Width="140" ItemsSource="{Binding CategoriasDisponibles}" 
                              SelectedItem="{Binding CategoriaSeleccionada}" />
                </StackPanel>

                <!-- ComboBox Subcategoría -->
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock Text="Subcategoría"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#4b5563" Margin="0,0,0,5"/>
                    <ComboBox Width="140" ItemsSource="{Binding SubcategoriasDisponibles}" 
                              SelectedItem="{Binding SubcategoriaSeleccionada}" />
                </StackPanel>
            </StackPanel>

            <!--CATALOGO DE PRODUCTOS-->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProductosFiltrados}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="240" Height="300" Margin="8" Background="White"
                                    BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="8">
                                <StackPanel>
                                    <Border Height="140" Background="#f3f4f6" ClipToBounds="True">
                                        <Image Source="{Binding  ImatgeURL}" Stretch="UniformToFill" Height="140"/>
                                    </Border>
                                    <TextBlock Text="{Binding Nom}" FontWeight="Bold" FontSize="16"
                                               Margin="10,10,10,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding }" FontWeight="Bold" FontSize="16"
                                               Margin="10,10,10,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Categoria}" Margin="10,4,10,0" Foreground="#6b7280"/>
                                    <TextBlock Text="{Binding Preu, StringFormat={}{0:C}}" 
                                               Margin="10,4,10,0" Foreground="#2563eb"/>
                                    
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
